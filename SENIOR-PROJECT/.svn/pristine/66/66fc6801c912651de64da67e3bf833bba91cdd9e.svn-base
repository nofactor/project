@model PhungNoiProject.Models.Order

@{
    ViewBag.Title = "Preparing Report";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            Detail of  order
        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                <div class="col-lg-5">
                    <form role="form">

                        <div class="form-group">
                            <label>User Name :</label>
                            @Html.DisplayFor(model => model.Member.firstName)
                        </div>

                        <div class="form-group">
                            <label>Order Date :</label>

                            @Html.DisplayFor(model => model.orderDate)
                        </div>

                        <div class="form-group">
                            <label>Daliver Date :</label>

                            @Html.DisplayFor(model => model.dueDate)
                        </div>

                        
                                    <table class="table">
                                        <thead>

                                            <tr>
                                                <th>#</th>
                                                <th>Picture</th>
                                                <th>Name</th>
                                                <th>Quantity</th>
                                               


                                            </tr>
                                        </thead>

                                        <tbody>


                                            @if (Model.OderDetail != null && Model.OderDetail.Count > 0)
                                            {



                                                foreach (var item in Model.OderDetail)
                                                {

                                                <tr>

                                                    <td>@Html.DisplayFor(model => item.productId)</td>
                                                    <td>
                                                        <img src="@Html.ValueFor(model => item.Product.picture)" height="50"; width="75"/></td>

                                                    <td>@Html.DisplayFor(model => item.Product.name)</td>
                                                    <td>@Html.DisplayFor(model => item.quantity)</td>


                                                </tr>
                              
                         
                                                }


                                            }
                                         
                                        </tbody>


                                    </table>



                    </form>
                </div>

            }
        </div>

    </div>
</div>

<input type="button" class="btn btn-primary" name="Button" value="Print" onclick="javascript: this.style.display = 'none'; window.print();" />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


