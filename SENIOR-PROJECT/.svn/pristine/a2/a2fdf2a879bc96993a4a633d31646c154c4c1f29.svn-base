@model IEnumerable<PhungNoiProject.Models.User>

@{
    ViewBag.Title = "Index";
}




<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">List of Users</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="panel panel-primary">

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <div class="panel-heading">
        The list of yore users
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="table-responsive">
            <h5>@Html.ActionLink("Create New", "Create")</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Tel.</th>
                        <th>Email</th>
                        <th>Create Date</th>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Users
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <table class="table">
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                            <td>@Html.DisplayFor(model => item.firstName)</td>
                            <td>@Html.DisplayFor(model => item.lastName)</td>
                            <td>@Html.DisplayFor(model => item.phoneNumber)</td>
                            <td>@Html.DisplayFor(model => item.email)</td>
                            <td>@Html.DisplayFor(model => item.createDate)</td>



                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                                                            @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                                                            @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                            </td>
                        </tr>
                                               
                    }
                </tbody>
            </table>
        </div>
    </div>



    <!-- /.table-responsive -->
</div>


