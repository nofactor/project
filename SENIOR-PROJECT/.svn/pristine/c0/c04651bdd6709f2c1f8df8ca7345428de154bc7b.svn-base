@model PhungNoiProject.Models.Member

@{
    ViewBag.Title = "User profile";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@ViewBag.Title</h1>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            Delete your user
        </div>
        <div class="panel-body">

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)

                <div class="col-lg-5">
                    <form role="form">



                        <div class="form-group">
                            <label>User ID:&nbsp</label>
                            @Html.DisplayFor(model => model.memberID, new { @class = "form-control" })
                        </div>


                        <div class="form-group">
                            <label>User Name:&nbsp</label>
                            @Html.DisplayFor(model => model.UserName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label>User Password:&nbsp</label>
                            @Html.DisplayFor(model => model.Userpassword)
                        </div>
                        <div class="form-group">
                            <label>Telephone Number:&nbsp</label>
                            @Html.DisplayFor(model => model.phoneNumber)
                        </div>
                          <div class="form-group">
                            <label>Address:&nbsp</label>
                            @Html.DisplayFor(model => model.address)
                        </div>
                          <div class="form-group">
                            <label>Picture:&nbsp</label>
                            @Html.DisplayFor(model => model.profilePicture)
                        </div>
                          <div class="form-group">
                            <label>Create date:&nbsp</label>
                            @Html.DisplayFor(model => model.createDate)
                        </div>
                          <div class="form-group">
                            <label>Last Sign in:&nbsp</label>
                            @Html.DisplayFor(model => model.lastSignInDate)
                        </div>


                        @Html.ActionLink("Edit", "Edit", new { id = Model.memberID })

                    </form>
                </div>    
                
            }
        </div>

        <form />
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
